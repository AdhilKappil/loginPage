<script>

 // userlogin data vlidation at client side

function validateForm() {

    const password = document.getElementById('password').value;
    const errorPassword = document.getElementById('errorpasswd');
    let isValid = true;

    //passwd
    if (password.trim() === '') {
        errorPassword.innerHTML = 'Password is required.';
        isValid = false;
    } 
    else if(password.length<8)
    {
        errorPassword.innerHTML = 'password should have minimum 8 charactors';
        isValid = false;
    } 
    else if(password.length>15)
    {
        errorPassword.innerHTML = 'password should have less than 15 charactors';
        isValid = false;
    } else {
        errorPassword.innerHTML = '';
    }

    return isValid;
}

</script>

